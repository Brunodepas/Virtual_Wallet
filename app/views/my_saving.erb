<head>
    <title>All savings</title>
</head>
<body>
    <h1>MIS AHORROS</h1>
    
    <button><a href="/new_saving">Crear nuevo ahorro</a></button>
    <br>
    <br>

    <% if @message %>
     <p style="color: green;"><%= @message %></p>
    <% end %>


    <% if @savings.any? %>
  
    <% @savings.each do |saving| %>
      
        <%= saving.description %>
        <br>
        Monto actual: $<%= saving.current_amount %><br>
        Meta: $<%= saving.goal_amount %>
        <% if saving.current_amount >= saving.goal_amount %>
        <p style="color: green;"> Meta alcanzada! </p>

        <form action="/my_saving/<%= saving.id %>/redeem" method="post" style="display:inline;">
        <button type="submit">Recuperar dinero</button>
        </form>

    <% else %>
              <a href="/add_to_saving/<%= saving.id %>"><button>Agregar dinero</button></a>

      </a>
    <% end %>
        <br>
        <br>
    <% end %>
  
<% else %>
  <p>No tenés ahorros todavía.</p>
<% end %>
    